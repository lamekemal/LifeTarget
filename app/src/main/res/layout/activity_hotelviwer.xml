<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hotelviwer">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_primp"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/title"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="Title of product"
                android:textColor="@color/Noir"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/baseline_favorite_black_24"/>
                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Title of product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:id="@+id/Payement_text"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="Heure d'ouverture 8:00 Ã  23:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/service_text"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="00229 66594469"
            android:textColor="@android:color/holo_blue_dark"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:isScrollContainer="true"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/galey_view">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="450dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/galery_one"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_margin="1dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pic3"/>
                            <ImageView
                                android:id="@+id/galery_two"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_margin="1dp"
                                android:src="@drawable/pic2"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="450dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/galery_four"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:layout_margin="1dp"
                                android:src="@drawable/pic4"
                                android:scaleType="centerCrop"/>
                            <ImageView
                                android:id="@+id/galery_five"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_margin="1dp"
                                android:src="@drawable/pic5"
                                android:scaleType="centerCrop"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/galery_six"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/pic5"
                        android:layout_margin="1dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="centerCrop"/>
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/description_view"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />
                <TextView
                    android:id="@+id/long_description"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:text="Mets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />
                <TextView
                    android:id="@+id/mets_text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:text="texte des mets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/informtion_view"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="Adresse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="?android:attr/listDivider" />
                    <TextView
                        android:id="@+id/adress_text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="14dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:text="Site Web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="?android:attr/listDivider" />
                    <TextView
                        android:id="@+id/site_web_text"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:text="texte des mets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/point_fort_view"
                android:visibility="gone">
                <TextView
                    android:id="@+id/point_fort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/point_faible_view"
                android:visibility="gone">
                <com.google.android.gms.maps.MapView
                    android:id="@+id/map_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp">
                </com.google.android.gms.maps.MapView>
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="8dp"
        app:fabSize="mini"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        app:backgroundTint="@color/viewBg"
        app:srcCompat="@drawable/hearts"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginRight="67dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:backgroundTint="@color/viewBg"
        android:animateLayoutChanges="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/service"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/custumservice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="117dp"
        android:background="@color/white"
        app:backgroundTint="@color/viewBg"
        android:animateLayoutChanges="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/customer_service"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginBottom="67dp"
        android:background="@color/white"
        android:animateLayoutChanges="true"
        app:fabSize="mini"
        app:backgroundTint="@color/viewBg"
        app:srcCompat="@drawable/instagram"
        android:visibility="gone"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/faba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@android:color/transparent"
        app:fabSize="mini"
        app:srcCompat="@drawable/add" />
</android.support.design.widget.CoordinatorLayout>