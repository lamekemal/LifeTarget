<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="7dp"
                app:layout_scrollFlags="scroll|enterAlways"
                >
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/infoProduitImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rest_hot"
                    android:scaleType="centerCrop"
                    />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabshar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_share_white"
        app:layout_anchor="@id/appBar"
        android:layout_margin="20dp"
        app:layout_anchorGravity="bottom|right"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textInnovDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breve description de l'innovation "

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mail"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textInnovMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breve description de l'innovation "

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Téléphonique"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textInnovCnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breve description de l'innovation "

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Video"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/textInnovVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breve description de l'innovation "

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auteur(s)"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/innoCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DANSOU Charle, ASSOUMA Lewis"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Images"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/innovRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </android.support.v7.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Société"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/societyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Innov.corp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:background="#adaead" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historique"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/innoHistor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historique de l'innovation "
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginVertical="6dp"
                    android:layout_height="1dp"
                    android:background="#adaead"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bibliographie"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/innoBibliot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Eyrolles, Dunod "
                    />
            </LinearLayout>



        </LinearLayout>





    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

